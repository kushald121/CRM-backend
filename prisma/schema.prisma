model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String
  role      String    // 'admin' or 'user'
  createdAt DateTime  @default(now())
  projects  Project[]
  reviews   Review[]
}

model Project {
  id         Int      @id @default(autoincrement())
  projectId  String
  userId     Int
  username   String
  status     String   // 'active', 'security', 'directors', 'terminated'
  ipAddress  String
  country    String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Review {
  id          Int      @id @default(autoincrement())
  userId      Int
  title       String
  description String
  rating      Int
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
